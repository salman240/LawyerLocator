<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:padding="8dp"
    android:background="?android:attr/selectableItemBackground">


    <!--Case 2 Reciever Not Auth-->
    <TextView
        android:id="@+id/reserveUser_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allow this user to reserve You?"
        android:textSize="18sp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textColor="?android:textColorPrimary"
        android:layout_below="@id/date_text_view"
        />


    <TextView
        android:id="@+id/UserName_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:textColor="#777"
        android:layout_below="@id/reserveUser_text_view"
        />


    <Button
        android:id="@+id/btnAllow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="Allow"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_green_light"
        android:layout_below="@id/UserName_text_view"
        android:layout_alignParentLeft="true"
        />

    <Button
        android:id="@+id/btnDeny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="8dp"
        android:text="Deny"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_light"
        android:layout_below="@id/UserName_text_view"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>
